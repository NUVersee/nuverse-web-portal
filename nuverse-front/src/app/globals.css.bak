@import "tailwindcss";

@font-face {
  font-family: "RostexDisplay";
  src: url("/fonts/rostex/Rostex-Oblique.ttf") format("truetype");
  font-weight: 600;
  font-style: normal;
  font-display: swap;
}

@font-face {
  font-family: "RostexDisplay";
  src: url("/fonts/rostex/Rostex-Oblique.ttf") format("truetype");
  font-weight: 700;
  font-style: italic;
  font-display: swap;
}

@font-face {
  font-family: "RostexBody";
  src: url("/fonts/rostex/Rostex-Regular.ttf") format("truetype");
  font-weight: 400;
  font-style: normal;
  font-display: swap;
}

@font-face {
  font-family: "RostexBody";
  src: url("/fonts/rostex/Rostex-Regular.otf") format("truetype");
  font-weight: 300;
  font-style: normal;
  font-display: swap;
}

@font-face {
  font-family: "RostexUI";
  src: url("/fonts/rostex/Rostex-Regular.ttf") format("truetype");
  font-weight: 500;
  font-style: normal;
  font-display: swap;
}

@theme {
  /* Violet / Purple Theme */
  --brand-50: #f5f3ff;
  --brand-100: #ede9fe;
  --brand-200: #ddd6fe;
  --brand-300: #c4b5fd;
  --brand-400: #a78bfa;
  --brand-500: #8b5cf6;
  /* Primary Violet */
  --brand-600: #7c3aed;
  --brand-700: #6d28d9;
  --brand-800: #5b21b6;
  --brand-900: #4c1d95;
  --brand-950: #2e1065;

  --accent-50: #fdf4ff;
  --accent-100: #fae8ff;
  --accent-200: #f0abfc;
  --accent-300: #e879f9;
  --accent-400: #d946ef;
  --accent-500: #c026d3;
  /* Secondary Fuchsia/Pink */
  --accent-600: #a21caf;
  --accent-700: #86198f;
  --accent-800: #701a75;
  --accent-900: #4a044e;
  --accent-950: #3b0764;

  --font-display: "RostexDisplay", sans-serif;
  --font-body: "RostexBody", system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
  --font-ui: "RostexUI", system-ui, sans-serif;
  --font-sans: "RostexBody", "Outfit", "Inter", ui-sans-serif, system-ui;
}

@custom-variant dark (&:where(.dark, .dark *));

@layer base {
  :root {
    --bg-dark: #121521;
    --bg-mid1: #38476b;
    --bg-mid2: #b6192e;
    --bg-end: #ffc1ac;

    --accent-warm: #9b9d9e;
    --accent-soft: #777777;

    --foreground: #bbae19;
    --background: var(--bg-dark);
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: var(--font-body);
    background: radial-gradient(circle at 0% 0%,
        var(--bg-dark),
        var(--bg-mid1),
        var(--bg-mid2),
        var(--bg-end));
    min-height: 100vh;
    overflow-x: hidden;
    color: var(--foreground);
    @apply transition-colors duration-300;
  }
}

@utility glass {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(12px);
  border: 1px solid rgba(255, 255, 255, 0.125);
}

@utility dark-glass {
  background: rgba(18, 21, 33, 0.7);
  backdrop-filter: blur(12px);
  border: 1px solid rgba(255, 255, 255, 0.05);
}

/* Animations */
@keyframes float {

  0%,
  100% {
    transform: translateY(0);
  }

  50% {
    transform: translateY(-20px);
  }
}

.animate-float {
  animation: 3s ease-in-out infinite float;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.animate-spin-slow {
  animation: spin 8s linear infinite;
}

@keyframes bounce-slow {

  0%,
  100% {
    transform: translateY(0);
  }

  50% {
    transform: translateY(-10px);
  }
}

.animate-bounce-slow {
  animation: 2s ease-in-out infinite bounce-slow;
}

@keyframes fade-in {
  from {
    opacity: 0;
  }

  to {
    opacity: 1;
  }
}

.animate-fade-in {
  animation: 0.8s ease-out fade-in;
}

/* BASE SETTINGS */
body,
html {
  background-color: #05101c;
  /* Deep Navy */
  margin: 0;
  padding: 0;
  color: white;
  overflow-x: hidden;
}

/* FLOATING SHAPES */
.floating-shapes {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
  pointer-events: none;
}

.shape {
  position: absolute;
  border-radius: 50%;
  filter: blur(100px);
}

.shape-1 {
  top: -10%;
  left: -10%;
  width: 500px;
  height: 500px;
  background: radial-gradient(circle, #38476b, transparent 70%);
  opacity: 0.5;
}

.shape-2 {
  bottom: 10%;
  right: -5%;
  width: 600px;
  height: 600px;
  background: radial-gradient(circle, #b6192e, transparent 70%);
  opacity: 0.4;
}

.shape-3 {
  top: 40%;
  left: 40%;
  width: 400px;
  height: 400px;
  background: radial-gradient(circle, #ffc1ac, transparent 70%);
  opacity: 0.3;
}

/* CONTAINER */
.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
  position: relative;
  z-index: 2;
}

/* GRADIENT TEXT HELPER */
.gradient-text {
  background: linear-gradient(45deg, #38476b, #b6192e, #ffc1ac);
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
}

/* ================= SECTION 1: MISSION & VISION (Premium List Style) ================= */
.mission-section {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 120px 0 50px 0;
}

.section-header {
  text-align: center;
  margin-bottom: 80px;
  opacity: 0;
}

.badge {
  display: inline-block;
  padding: 6px 14px;
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 50px;
  font-size: 0.75rem;
  font-weight: bold;
  color: #ffc1ac;
  margin-bottom: 20px;
  letter-spacing: 2px;
  text-transform: uppercase;
}

.section-header h1 {
  font-size: 4rem;
  font-family: 'Arial Black', sans-serif;
  margin: 0;
  line-height: 1.1;
}

.mv-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 60px;
  align-items: start;
}

.mv-item {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  opacity: 0;
  /* Animation Start */
}

/* Icon with Glow */
.icon-display {
  position: relative;
  width: 70px;
  height: 70px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 2rem;
  color: white;
  margin-bottom: 30px;
}

.icon-glow {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #b6192e, #ffc1ac);
  filter: blur(25px);
  opacity: 0.6;
  border-radius: 50%;
  z-index: -1;
}

.mv-content h2 {
  font-size: 2.2rem;
  margin: 0 0 15px 0;
  font-weight: 300;
}

.separator {
  width: 60px;
  height: 3px;
  background: linear-gradient(90deg, #b6192e, transparent);
  margin-bottom: 20px;
}

.mv-content p {
  color: #ccc;
  line-height: 1.8;
  font-family: 'Arial Black', sans-serif;
  font-size: 1.1rem;
  max-width: 500px;
}


/* ================= SECTION 2: TEAM (No Cards, Floating Profiles) ================= */
.team-section {
  padding: 100px 0;
}

.section-title {
  text-align: center;
  font-size: 3rem;
  font-family: 'Arial Black', sans-serif;
  margin-bottom: 80px;
  color: white;
}

.team-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 60px 120px;
}

.team-member {
  text-align: center;
  transition: transform 0.4s ease;
  opacity: 0;
  cursor: pointer;
}

.team-member:hover {
  transform: translateY(-10px);
}

/*Image Styling */
.member-img-box {
  position: relative;
  width: 160px;
  height: 160px;
  margin: 0 auto 25px auto;
}

.img-placeholder {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: #121e31;
  /* Fallback or placeholder bg */
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 2.5rem;
  color: #38476b;
  position: relative;
  z-index: 2;
  overflow: hidden;
}

/* Animated Ring around image */
.img-ring {
  position: absolute;
  top: -5px;
  left: -5px;
  right: -5px;
  bottom: -5px;
  border-radius: 50%;
  background: linear-gradient(45deg, #38476b, #b6192e, #ffc1ac, #38476b);
  background-size: 300% 300%;
  z-index: 1;
  opacity: 0.5;
  animation: spinGradient 4s linear infinite;
  transition: opacity 0.3s;
}

.team-member:hover .img-ring {
  opacity: 1;
  filter: blur(5px);
}

.member-info h3 {
  font-size: 1.4rem;
  margin: 0 0 5px 0;
  font-weight: 600;
  letter-spacing: 0.5px;
}

.member-info .role {
  font-size: 0.95rem;
  color: #ffc1ac;
  text-transform: uppercase;
  letter-spacing: 1.5px;
  font-weight: bold;
  display: block;
  opacity: 0.8;
  transition: opacity 0.3s;
}

.team-member:hover .role {
  opacity: 1;
  color: #fff;
}


/* ================= SECTION 3: CONTACT (Minimal Footer Style) ================= */
.contact-section {
  padding: 100px 0 50px 0;
  text-align: center;
  position: relative;
}

/* Separator Line */
.contact-section::before {
  content: "";
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 80%;
  height: 1px;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
}

.contact-container h2 {
  font-size: 2.5rem;
  margin-bottom: 10px;
  font-weight: 300;
}

.contact-container p {
  color: #888;
  margin-bottom: 50px;
  font-size: 1.1rem;
}

.social-links {
  display: flex;
  justify-content: center;
  gap: 60px;
  margin-bottom: 80px;
}

.social-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 15px;
  text-decoration: none;
  color: white;
  transition: transform 0.3s;
  opacity: 0;
  /* Animation Start */
}

.social-item i {
  font-size: 2rem;
  color: #a0a0a0;
  transition: color 0.3s;
}

.social-item span {
  font-size: 0.9rem;
  letter-spacing: 1px;
  color: #555;
  text-transform: uppercase;
  transition: color 0.3s;
}

.social-item:hover {
  transform: translateY(-5px);
}

/* 1. LinkedIn */
.social-item:hover .fa-linkedin-in {
  color: #0077b5;
  transition: all 0.3s ease;
  text-shadow: 0 0 20px rgba(0, 119, 181, 0.8);
}

/* 2. Instagram */
.social-item:hover .fa-instagram {
  color: #E4405F;
  transition: all 0.3s ease;
  text-shadow: 0 0 20px rgba(228, 64, 95, 0.8);
}


/* Email*/
.social-item:hover .fa-envelope {
  color: #ffc1ac;
  transition: all 0.3s ease;
  text-shadow: 0 0 20px rgba(255, 193, 172, 0.8);
}

/* Optional: Ensure the text label also changes color or stays white */
.social-item:hover span {
  color: white;
  /* Or match the icon color if you prefer */
}

.social-item:hover span {
  color: white;
}

/* ANIMATION KEYFRAMES */
@keyframes spinGradient {
  0% {
    background-position: 0% 50%;
  }

  50% {
    background-position: 100% 50%;
  }

  100% {
    background-position: 0% 50%;
  }
}

/* RESPONSIVE */
@media (max-width: 768px) {
  .mv-grid {
    grid-template-columns: 1fr;
    text-align: center;
  }

  .mv-item {
    align-items: center;
  }

  .separator {
    margin: 0 auto 20px auto;
  }

  .section-header h1 {
    font-size: 2.8rem;
  }

  .team-grid {
    gap: 40px;
  }

  .social-links {
    gap: 30px;
  }
}
